# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true  # Set to false for live trading

# Database Configuration
DATABASE_URL=sqlite:///trading_bot.db
# For PostgreSQL: postgresql://user:password@localhost:5432/trading_bot

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# Trading Configuration
BASE_CURRENCY=USDT
MAX_POSITIONS=10
POSITION_SIZE_PCT=0.1  # 10% of balance per trade
STOP_LOSS_PCT=0.05     # 5% stop loss
TAKE_PROFIT_PCT=0.15   # 15% take profit
MIN_VOLUME_24H=1000000 # Minimum 24h volume in USDT
MAX_DAILY_LOSS_PCT=0.10 # 10% max daily loss
MAX_DRAWDOWN_PCT=0.20   # 20% max drawdown

# Symbol Filtering (comma-separated)
# SYMBOL_WHITELIST=BTCUSDT,ETHUSDT,ADAUSDT
# SYMBOL_BLACKLIST=LUNAUSDT,USTCUSDT

# Notification Configuration
# Telegram Bot (optional)
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord Webhook (optional)
# DISCORD_WEBHOOK=your_discord_webhook_url
